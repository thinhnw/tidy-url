<div id="<%= dom_id url %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Original:</strong>
    <%= url.original %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Shortened:</strong>
  </p>
  <div class="flex items-center">
    <input type="text" id='<%= "text-to-copy-#{url.shortened}" %>' class="px-4 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-2 focus:ring-blue-400" 
      value="<%= app_url + '/' + url.shortened %>" readonly>
    <button class="px-4 py-2 text-white bg-blue-500 copy-button rounded-r-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400"
      data-target='<%= "#text-to-copy-#{url.shortened}" %>'>
      Copy
    </button>
  </div>
</div>
