<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "URLs" %>
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Shortened URLs</h1>
    <%= link_to "New", new_url_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="urls" class="min-w-full">
    <% @urls.each do |url| %>
      <hr class="mt-4">
      <%= render url %>
      <p>
      </p>
    <% end %>
  </div>
</div>
